<%- include('../../partials/header.ejs')%>

    <body>
        <%- include('../../partials/navbar.ejs')%>
            <div class="container">
                <hr>
                <div class="card">
                    <div class="card-header">
                        <h2>Listagem de produtos</h2>
                    </div>
                    <hr>
                    <div>
                        <a href="/admin/produtos/novo" class="btn btn-info ml-3">Cadastrar</a>
                    </div>
                    <br>
                        <ul class="list-group list-group-horizontal">
                                <button type="button" class="list-group-item list-group-item-action active"
                                    aria-current="true">
                                    Código:
                                <button type="button" class="list-group-item list-group-item-action active"
                                    aria-current="true" >
                                    Nome:
                                <button type="button" class="list-group-item list-group-item-action active"
                                    aria-current="true">
                                    Preço:
                                <button type="button" class="list-group-item list-group-item-action active"
                                    aria-current="true">
                                    Quantidade:
                                <button type="button" class="list-group-item list-group-item-action active"
                                    aria-current="true">
                                    Status:

                        </ul>
                        <%produtos.forEach(produto=>{%>
                        <ul class="list-group list-group-horizontal">
                         <button type="button" class="list-group-item list-group-item-action"> <a href="/admin/produtos/<%=produto.id %>"><%=produto.id %></a></button>
                         <button type="button" class="list-group-item list-group-item-action"><%=produto.nome %></button>
                         <button type="button" class="list-group-item list-group-item-action">R$<%=produto.preco %></button>
                         <button type="button" class="list-group-item list-group-item-action">UN: <%=produto.quantidade %></button>
                         <button type="button" class="list-group-item list-group-item-action"><%=produto.status %></button>
                        </ul>
                        <%})%>
    </body>

    <%- include('../../partials/footer.ejs')%>