<%- include('../../partials/header.ejs')%>

    <body>
        <%- include('../../partials/navbar.ejs')%>
            <div class="container">
                <hr>
                <div class="card">
                    <div class="card-header">
                        <h2>Novo Produto</h2>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/produto/save">
                            <label>Nome:</label>
                            <input class="form-control" type="text" name="nome"
                                placeholder="Defina o nome do produto" required><br>
                            <label>Descrição:</label>
                            <textarea class="form-control" placeholder="Escreva a descrição do produto!"
                                name="descricao" id="descricao"></textarea>
                            <label>Preço:</label><br>
                            R$<input type=number step=0.01 name="preco" required><br><br>
                            <label>Quantidade disponível:</label><br>
                            UN<input type="number" name="quantidade" value="1" required><br><br>
                            <label>Status:</label>
                            <select name="status">
                                <option value="A">Ativo</option>
                                <option value="D">Desativado</option>
                            </select>
                            <br>
                            <label>O produto ja tem endereçamento definido?</label><br>
                            <select name="resp" id="resp">
                                <option value="S">Sim</option>
                                <option value="N">Não</option>
                            </select>
                            <hr>
                            <div class="card-footer">
                                <button class="btn btn-success" onclick="this.form.submit(); this.disabled=true; this.value='Carregando…';">Cadastrar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

    </body>
    <%- include('../../partials/footer.ejs')%>