<%- include('../../partials/header.ejs')%>

    <body>
        <%- include('../../partials/navbar.ejs')%>
            <div class="container">
                <hr>
                <div class="card">
                    <div class="card-header">
                        <h2>Edição de Produto</h2>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/produto/update">
                            <input type="hidden" name="id" value="<%=produto.id%>">
                            <label>Nome:</label>
                            <input class="form-control" type="text" name="nome"
                                placeholder="Defina o nome do produto" value="<%=produto.nome%>"><br>
                            <label>Descrição:</label>
                            <textarea class="form-control" placeholder="Escreva a descrição do produto!"
                                name="descricao" id="descricao"><%=produto.descricao%></textarea>
                            <label class="position-relative" >Preço:</label> <label for="qtd">Quantidade disponível:</label><br>
                            R$<input type=number step=0.01 name="preco" value="<%=produto.preco%>" class="position-relative">
                            UN<input type="number" name="quantidade" value="<%=produto.quantidade%>" id="qtd" value="<%=produto.quantidade%>"class="position-relative"><br><br>
                            <label>Status:</label>
                            <select name="status">
                                <option value="A">Ativo</option>
                                <option value="D">Desativado</option>
                            </select>
                            <br>
                            <label>Deseja alterar o endereço do produto?</label><br>
                            <select name="resp" id="resp">
                                <option value="S">Sim</option>
                                <option value="N">Não</option>
                            </select>
                            <hr>
                            <div class="card-footer">
                                <button class="btn btn-success">Atualizar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

    </body>
    <%- include('../../partials/footer.ejs')%>